CudaDeviceFunction void Run() {
    switch (NodeType & NODE_BOUNDARY) {
	case NODE_Solid:
	case NODE_Wall:
		BounceBack();
        return;
		break;
    }
    if ((NodeType & NODE_COLLISION))
    {
      CollisionBGK();
     //   CollisionMRT();
    }
}

