CudaDeviceFunction void BounceBack()
{
// *******************
// Bounce back f
// *******************    
     real_t uf;
<?R
  V = cbind(1:9, bounce+1)
  sel = V[,1] > V[,2]
  V = V[sel,]
  for (i in 1:nrow(V))
  {
	C(uf, f[V[i,1]])
        C(f[V[i,1]], f[V[i,2]])
        C(f[V[i,2]], uf)
	
   }
?>
// ********************
// Dirichlet for others
// ********************

<?R
#    psi_shifted = PV(paste("psi(",-U[,1],",",-U[,2],")"))
    psi_bc=PV("psi_bc")
?>
    real_t h0bc =  exp(-ez * el * psi_bc / kb / T);

    real_t h1bc =  exp(ez * el * psi_bc / kb / T);

<?R
    h0bc = PV("h0bc");    
    h1bc = PV("h1bc");
# actual, proper bc, g should be from diferent node, as psi_shifted, unable to imlement
#    C(g, wp*1.  - (1. - wp0) * (g_shifted - wp*psi_shifted))
    C(g, wp*psi_bc)
    C(h_0, n_inf * wi * h0bc )
    C(h_1, n_inf * wi * h1bc )

    ?>
}

