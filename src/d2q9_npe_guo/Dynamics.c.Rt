    vector_t u = {0.,0.};
    real_t rho = 1.;
    

<?R
    psi0=PV("psi0");

	C( g, psi0 * wp0 );
    C( f, feq );

    C( h_0, n_inf * wi);
    C( h_1, n_inf * wi);

?>
}


CudaDeviceFunction void CollisionBGK()
{
	real_t M[9];
	real_t psi, rho_e, rho, n0, n1;
    real_t BK;
    vector_t u;

	rho_e = getrho_e();
    psi = getPsi();
    rho = getRho();

    u = getRhoU();
    u.x = u.x / rho;
    u.y = u.y / rho;

    n0 = getn0();
    n1 = getn1();
//    subiter = getSubiter();
    vector_t Force, du;
    Force.x = Ex * rho_e;
    Force.y = 0.;
    const vector_t gradPsi = getGradPsi();
    const real_t omega = 1.0-1.0/(3*nu + 0.5);
<?R
        cs2 = 1./3.
        C(PV("const real_t tau_D"), D * dt_D^-1 * cs2^-1  + 1./2.)
        tau_D = PV("tau_D")

        B = D *(cs2^-1) * (tau_D^-1) * (dt_D^-1) 

        BK = PV("BK")

        C(BK,B * el * kb^-1 * Temp^-1)
#        C(BK,B)
        u = PV(c("u.x","u.y"))

        cu = (u[1] * U[,1] + u[2] * U[,2]) 
        
        gradPsi = PV(c("gradPsi.x", "gradPsi.y"))

        n0 = PV("n0")    
        heq0 = wi * n0 * (1. - cu * cs2^-1) ;

        n1 = PV("n1")
        heq1 = wi * n1 * (1. - cu * cs2^-1)
        
        S = gradPsi[1] * U[,1] + gradPsi[2] * U[,2]
        
        C(h_0, h_0 - tau_D^-1 * (h_0 - heq0 ) - wi * dt_D * z0 * S * n0 * BK)
        C(h_1, h_1 - tau_D^-1 * (h_1 - heq1 ) - wi * dt_D * z1 * S * n1 * BK )

#        rho_ee = z0 * sum(h_0) + z1 * sum(h_1)
#        rho_ee = rho_ee * epsilon^-1
#        C(rho_e, rho_ee)

        RD = -2./3. * (0.5 - tau_psi) * dt  * ( rho_e *(epsilon^-1) ) ;
        C(g, g - tau_psi^-1 * (g - wp*psi) +  dt * wps * RD  )

        
        
        

        omega = PV("omega")
        C(du, PV(c("Force.x","Force.y")))
        C(f,  f - omega*(f -  feq) + (feq2 - feq) ) 

    ?>
      
//    }

}

