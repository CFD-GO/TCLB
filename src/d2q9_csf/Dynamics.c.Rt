	real_t rho, ux, uy, C;
	rho = (1+Pressure*3);
	ux=0;
	uy=0;
	ux = Velocity+ux;
    C = PhaseField; 
	SetEquilibrum(
		rho,
		ux*rho,
		uy*rho,
        C
	);
    <?R
