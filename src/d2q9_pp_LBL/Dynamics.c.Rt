S[8]=w[8]*((1.0-ux+1.0*(1.0*ux+-1.0*uy)/c_squ)*Force.x+(-1.0-uy+-1.0*(1.0*ux+-1.0*uy)/c_squ)*Force.y+(gamma/(2.0*rho))*(pow(1.0*Force.x+-1.0*Force.y,2)/c_squ-(Force.x*Force.x+Force.y*Force.y)))/c_squ;
	
	// Alter PDF's
	f[0]=f[0]+S[0];
	f[1]=f[1]+S[1];
	f[2]=f[2]+S[2];
