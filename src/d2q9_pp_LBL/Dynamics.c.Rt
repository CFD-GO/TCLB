<?R
# ############# Pseudopotential (pp) - Lycett-Brown & Luo (LBL)
# based on "Improved forcing scheme in pseudopotential lattice Boltzmann methdos for multiphase
#           flow at arbitrarily high density ratios - Lycett-Brown & Luo (2015)"
# implemented by T. Mitchell 2016
# #############

	source("conf.R") 
	source("lib/feq.R")
	c_header();
	library(polyAlgebra)

# Extract from d2q9_kuper to set up general parameters:
	U  = as.matrix(Density[Density$group=="f",c("dx","dy")])
	f  = PV(Density$name[Density$group=="f"])
	ph = PV(paste("psi(",-U[,1],",",-U[,2],")"))
	
	u  = PV(paste("u[",1:2-1,"]",sep=""))
	uf = PV("uf")
	d  = PV("d")
	usq   = PV("usq")
	omega = PV("omega")
	uf1 = uf
	uf2 = uf
	uf3 = uf
	t1 = 4/9
	t2 = 1/9
	t3 = 1/36
	c_squ = 1/3
	tn    = diag(c(t1,t2,t2,t2,t2,t3,t3,t3,t3))
	bounce = c(0,3,4,1,2,7,8,5,6)
?>
CudaDeviceFunction void Init() {
	real_t u[2] = {Velocity,VelocityY};
	real_t rho = Density;
	SetEquilibrum(rho,u);
	//for (int i = 0; i<9; i++){
	//	printf("\n %6.4lf", f[i]);
	//}
	calcPsi();
	//printf("\n Rho=%6.4lf , Psi=%6.4lf",rho,psi);
}
CudaDeviceFunction void Run() {
    switch (NodeType & NODE_BOUNDARY) {
	case NODE_Solid:
	case NODE_Wall:
		BounceBack();
		break;
	case NODE_EVelocity:
		EVelocity();
		break;
	case NODE_WPressure:
		WPressure();
		break;
	case NODE_WVelocity:
		WVelocity();
		break;
	case NODE_EPressure:
		EPressure();
		break;
	case NODE_TopSymmetry:
		SymmetryTop();
		break;
	case NODE_BottomSymmetry:
		SymmetryBottom();
		break;
    }
    if (NodeType & NODE_MRT)
    {
		calcPsi();
		CollisionMRT();
		/*for (int i = 0; i<9; i++){
			printf("\n %6.4lf", f[i]);
		}*/
		BodyForce();
    }
}
CudaDeviceFunction void SetEquilibrum(real_t d, real_t u[2]) {
real_t usq, uf;
<?R
    C(usq , sum(u*u)*(1/c_squ)) ?>
<?R
	for (i in 1:9) {
         cat("//--",i,"-------------------------------------------------\n")
         w2 = list(
                 c(uf1, (u %*% t(U) * (1/c_squ))[i]),
                 c(uf2 , uf1 + (uf1*uf1+usq*(-1))*0.5 + 1),
                 c(uf3 , d * uf2),
                 c(f[i] , uf3 * tn[i,i])
         )
         for (h in w2) C(h[1],h[2])
        }
?>
}
// Get Quantity Functions:
CudaDeviceFunction real_t getRho(){
	return <?R C(sum(f)) ?> ;
	}  
CudaDeviceFunction vector_t getU(){
	real_t d = getRho();
	vector_t u;
	vector_t F;
	<?R 
		C(PV(c("u.x","u.y")), f %*% U) 
	?>
	F = getF(); 
	u.x = u.x + F.x*0.5;
	u.y = u.y + F.y*0.5;
	u.z = 0.0;
	u.x /= d;
	u.y /= d;
	return u;
}
CudaDeviceFunction vector_t getF(){
	real_t rho = f[1]+f[2]+f[3]+f[4]+f[5]+f[6]+f[7]+f[8]+f[0];
	vector_t F = PPForce();
	F.x += GravitationX*rho ; // Need to check implementation
	F.y += GravitationY*rho ; // as to incorporate buoyancy effects	
	F.z = 0.0;
	return F;
}
CudaDeviceFunction real_t getP(){
// Carnahan-Starling EoS.
	real_t p0,bp, d;
	d = f[1]+f[2]+f[3]+f[4]+f[5]+f[6]+f[7]+f[8]+f[0];
	bp = d*beta/4.0;
	p0 = d*R*T*(1+bp+bp*bp-bp*bp*bp)/pow(1-bp,3) - alpha*d*d;
    /*printf("\n rho in P, %6.4lf",d);
	printf("\n T=%6.4lf",T);
	printf("\n R=%6.4lf",R);
	printf("\n alpha=%6.4lf",alpha);
	printf("\n p0=%6.4lf",p0);*/
	return p0;
}
CudaDeviceFunction real_t getPsi(){
	return psi(0,0);
}
// Pseudopotential Specific Functions
CudaDeviceFunction vector_t PPForce(){
	real_t R[9];
	vector_t F;
	<?R
		Force = PV(c("F.x","F.y"));
       	R = PV(c(paste("R[",1:9-1,"]",sep="")))
        C(R , ph);
    ?>
    //for (int i =0; i<9;i++){
		//printf("\n Phi %d is %d", i, R[i]);
	//}
// Symmetry alteration same as kuper model - set outside psi equal to inside
	if ((NodeType & NODE_BOUNDARY) == NODE_TopSymmetry) {
	<?R
		reflect_to   = c(8,4,7) + 1;
		reflect_from = c(5,2,6) + 1;
		for (i in 1:3)		{
			C( R[reflect_to[i]], R[reflect_from[i]] )		}
	?>
	}
	if ((NodeType & NODE_BOUNDARY) == NODE_RightSymmetry) {
		 <?R
			reflect_to   = c(6,3,7) + 1;
			reflect_from = c(5,1,8) + 1;
			for (i in 1:3)			{
				C( R[reflect_to[i]], R[reflect_from[i]] )	}
		?>
	} 
    <?R
    # tn_force From McDonald & Turner 2015:
    # tn_force = matrix( c(0,2,2,2,2,1,1,1,1),9,1)
    # tn_force taken as lattice weightings
	tn_force = matrix( c(t1,t2,t2,t2,t2,t3,t3,t3,t3),9,1)
	# tn_force taken as weightings from kupershtok model
	# tn_force = matrix( c(0,1,1,1,1,1/4,1/4,1/4,1/4),9,1)
	G  = PV("G")
	temp = tn_force * R
	temp = t(temp) %*% U
	temp = c_squ*temp
	C(Force,G * R[1] * temp)  
    ?>
   /*
// Beta force attempt 6/5/16 - Zarghami et al (2015)
	real_t c0 = 6.0;
	real_t c1 = 1/3.0;
	real_t c2 = 1/12.0;
	real_t B  = 1.16;
	real_t dx = c1*(R[1]-R[3]) + c2*(R[5]-R[6]-R[7]+R[8]);
	real_t dy = c1*(R[2]-R[4]) + c2*(R[5]+R[6]-R[7]-R[8]);
	F.x = -c0*B*R[0]*G * ( dx ) -  (1-B) * c0*G*( dx*dx )/2.0;
	F.x = -c0*B*R[0]*G * ( dy ) -  (1-B) * c0*G*( dy*dy )/2.0;
	*/
	F.z = 0.0;
	return F;
}
CudaDeviceFunction void calcPsi(){
// Calculate psi at each point so that pseudopotential force
// can be found.
	real_t p0, d;
	d = f[1]+f[2]+f[3]+f[4]+f[5]+f[6]+f[7]+f[8]+f[0];
	p0 = getP();
	//printf("\n Pressure, %6.4lf", p0);
	psi = sqrt(2*(p0-d/3.0)/(G/3.0));
}
// Boundary Conditions
// Boundary Conditions
CudaDeviceFunction void BounceBack() {
     real_t uf;
<?R
  V = cbind(1:9, bounce+1)
  sel = V[,1] > V[,2]
  V = V[sel,]
  for (i in 1:nrow(V))
  {
	C(uf, f[V[i,1]])
    C(f[V[i,1]], f[V[i,2]])
    C(f[V[i,2]], uf)
   }
?>
}
CudaDeviceFunction void EVelocity(){
     real_t rho, ru;
	 real_t ux0 = Velocity;
	rho = ( f[0] + f[2] + f[4] + 2.*(f[1] + f[5] + f[8]) ) / (1. + ux0);
	ru = rho * ux0;
	f[3] = f[1] - (2./3.) * ru;
	f[7] = f[5] - (1./6.) * ru + (1./2.)*(f[2] - f[4]);
	f[6] = f[8] - (1./6.) * ru + (1./2.)*(f[4] - f[2]);
}
CudaDeviceFunction void WPressure(){
     real_t ru;
	 real_t rho = Density;
	ru = rho - ( f[0] + f[2] + f[4] + 2.*(f[3] + f[7] + f[6]) );

	f[1] = f[3] + (2./3.) * ru;
	f[5] = f[7] + (1./6.) * ru - (1./2.)*(f[2] - f[4]);
	f[8] = f[6] + (1./6.) * ru + (1./2.)*(f[2] - f[4]);
}
CudaDeviceFunction void WVelocity(){
	real_t rho2;
	real_t u[2] = {Velocity,0.};
	rho2 = Density;
	SetEquilibrum(rho2,u);
}
CudaDeviceFunction void EPressure(){
        real_t ru;
	 real_t rho = Density;
	ru = ( f[0] + f[2] + f[4] + 2.*(f[1] + f[5] + f[8]) ) - rho;

	f[3] = f[1] - (2./3.) * ru;
	f[7] = f[5] - (1./6.) * ru + (1./2.)*(f[2] - f[4]);
	f[6] = f[8] - (1./6.) * ru - (1./2.)*(f[2] - f[4]);
}
