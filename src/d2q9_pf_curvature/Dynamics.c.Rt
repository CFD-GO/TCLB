CudaDeviceFunction vector_t getNormal(){
    vector_t n = getGradientPhi();
    real_t ln = sqrt(n.x*n.x + n.y*n.y);    
    if(ln == 0.){
        n.x = 0.;
        n.y = 0.;
    } else if (ln > 100) {
    // at least one link is solid
    // this is only on boundary, still not nice :/    
        real_t t_x = 0;
        real_t t_y = 0;

    
    } else {
        n.x /= ln;
        n.y /= ln;
    }

    return n;

}
