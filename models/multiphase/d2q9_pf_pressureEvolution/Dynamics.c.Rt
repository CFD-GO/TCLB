	Rm[7] = 0.25*(-PhaseF(-2,-2)+5.0*PhaseF(-1,-1)-3.0*PhaseF(0,0)-PhaseF(1,1))  ;
	Rm[8] = 0.25*(-PhaseF(2,-2) +5.0*PhaseF(1,-1) -3.0*PhaseF(0,0)-PhaseF(-1,1)) ;
	
//	1b. Perform the collision:
// 	1b. i)Determine Gamma_i, feq^bar_i --> R_i = f_i-feq^bar_i	
<?python
for i in range(9): 
