	real_t Fb_y = (rho-Density_h)*BuoyancyY + rho*GravitationY + (1-pf)*Density_h*GmatchedY;
	vector_t grad = calcGradPhi();
	
	vector_t u;
	<?R C(PV(c("u.x","u.y")), f %*% U) ?>
	u.x = (3.0/rho) * (u.x + (0.5/3.0)*(mu*grad.x+Fb_x));
